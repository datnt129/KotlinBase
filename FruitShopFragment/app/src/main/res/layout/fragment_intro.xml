<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".IntroFragment">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fruits_basket_shadow"
            android:layout_marginStart="@dimen/_minus14sdp"
            android:layout_marginEnd="@dimen/_minus12sdp"
            android:layout_marginBottom="@dimen/_minus17sdp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@id/fruits_basket_image"
            app:layout_constraintEnd_toEndOf="@id/fruits_basket_image"
            app:layout_constraintBottom_toBottomOf="@id/fruits_basket_image" />

        <ImageView
            android:id="@+id/fruits_basket_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_151sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_21sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/fruits_basket"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/shop_intro_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46sdp"
            android:layout_marginTop="@dimen/_58sdp"
            android:layout_marginEnd="@dimen/_46sdp"
            android:text="@string/intro_text"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fruits_basket_image" />

        <Button
            android:id="@+id/get_stared_button"
            android:layout_width="@dimen/_207sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_72sdp"
            android:layout_marginBottom="@dimen/_77sdp"
            android:text="@string/get_started_button"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_intro_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>