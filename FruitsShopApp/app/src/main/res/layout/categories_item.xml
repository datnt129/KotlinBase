<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_marginEnd="17dp">

    <ImageView
        android:id="@+id/imvCategoriesPictures"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_categories"
        android:backgroundTint="#69D6FFDA"
        android:padding="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/categories_fruits" />

    <TextView
        android:id="@+id/tvCategoriesName"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="13dp"
        android:text="Fruits"
        android:textColor="@color/green_10"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvCategoriesPictures" />
</androidx.constraintlayout.widget.ConstraintLayout>