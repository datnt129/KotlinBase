<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clContainerProductItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="148dp"
    android:layout_height="177dp"
    android:layout_marginBottom="44dp"
    android:layout_marginEnd="19dp">

    <TextView
        android:id="@+id/tvBackgroundProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_top_products"
        android:backgroundTint="#1AFB9082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imvProductImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_tomato" />

    <TextView
        android:id="@+id/tvBottomBackgroundProduct"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/shape_top_products"
        android:backgroundTint="#C7FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvBackgroundProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="Tomato"
        android:textSize="15sp"
        android:textColor="#C21528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBottomBackgroundProduct" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="9dp"
        android:text="$1.50"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvBottomBackgroundProduct"
        app:layout_constraintTop_toTopOf="@+id/tvBottomBackgroundProduct" />

    <ImageView
        android:id="@+id/imvProductLikeButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:background="@drawable/shape_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/all_navbar_like" />


</androidx.constraintlayout.widget.ConstraintLayout>